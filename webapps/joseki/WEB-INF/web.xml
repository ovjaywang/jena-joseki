<?xml version="1.0"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <display-name>Jena RDF Server</display-name>

  <!-- SERVLETS -->

  <!-- A well-known servlet for testing -->

  <servlet>
    <servlet-name>Dumper</servlet-name>
    <servlet-class>
      org.joseki.servlets.DumpServlet
    </servlet-class>
  </servlet>

  <servlet>
    <!-- NOT rdfserver (the application name) -->
    <servlet-name>Jena SPARQL Server</servlet-name>
    <servlet-class>org.joseki.http.Servlet</servlet-class>

    <!-- Configuration file -->
    <init-param>
      <param-name>jena.rdfserver.modelset</param-name>
      <param-value>etc/joseki.n3</param-value>
    </init-param>

  </servlet>

  <!-- MAPPINGS -->

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/favicon.ico</url-pattern>
  </servlet-mapping>

  <!-- Warning: using /* for Joseki services 
       means that the welcome page is not handled.
       Nor other mappings like /*.html 
   -->
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/xml-to-html.xsl</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/query.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/robots.txt</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Dumper</servlet-name>
    <url-pattern>/dump</url-pattern>
  </servlet-mapping>

  <!-- Note: the URL pattern is very general -->
  <servlet-mapping>
    <servlet-name>Jena SPARQL Server</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>


  <!-- SECURIY -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Joseki</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <!-- <http-method>OPTIONS</http-method> -->
    </web-resource-collection>
  </security-constraint>

</web-app>

<?xml version="1.0"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
"http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <display-name>Jena RDF Server</display-name>

  <!-- SERVLETS -->

  <!-- A well-known servlet for testing -->

  <!-- The servlet "default" serves static pages.
       It is define in webdefault.xml which is applied by
       the servlet container first (Jetty, Tomcat)
  -->

  <servlet>
    <servlet-name>Dumper</servlet-name>
    <servlet-class>
      org.joseki.server.webserver.servlets.DumpServlet
    </servlet-class>
  </servlet>

  <servlet>
    <servlet-name>Jena RDF Server</servlet-name>
    <servlet-class>org.joseki.server.http.JosekiWebAPI</servlet-class>

    <!-- Joseki configuration file -->
    <init-param>
      <param-name>jena.rdfserver.modelset</param-name>
      <param-value>etc/joseki.n3</param-value>
    </init-param>

  </servlet>

  <!-- MAPPINGS -->

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/favicon.ico</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <!-- Style sheet that turns XML results into an HTML table -->
    <url-pattern>/xml-to-html.xsl</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/*.css</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/*.html</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/robots.txt</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Dumper</servlet-name>
    <url-pattern>/dump</url-pattern>
  </servlet-mapping>

  <!-- "Default servlet" is the URL-pattern "/"
       Do not confuse with servlet called "default"
       Standard:
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
    -->

  <!-- Note: the URL pattern is very general
       If it is / or /* then the welcome file is not applied 
       as this servlet-mapping will match first -->
  <servlet-mapping>
    <servlet-name>Jena RDF Server</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- Does not work - gets served by the rule above.
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  -->



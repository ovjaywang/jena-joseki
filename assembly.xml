<assembly>
  <!--<id>dist</id>-->
  <baseDirectory>Joseki-${project.version}</baseDirectory>
  <formats>
    <!--
    <format>tar.gz</format>
    <format>tar.bz2</format>
    -->
    <format>zip</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>test</scope>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <includes>
	<include>CopyrightNotice.txt</include>
	<include>README*</include>
	<include>ChangeLog.txt</include>
	<include>pom.xml</include>
      </includes>
    </fileSet>

    <!-- Additional material for lib/ -->
    <!--
    <fileSet>
      <directory>lib</directory>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    -->

    <!--
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>joseki-${project.version}.jar</include>
      </includes>
    </fileSet>
    -->

    <!-- Put sources at the top level -->
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>joseki-${project.version}-sources.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <includes>
	<include>joseki-config.ttl</include>
	<include>joseki-config-example.ttl</include>
	<include>joseki-config-tdb.ttl</include>
	<include>joseki-config-sdb.ttl</include>
	<include>sdb.ttl</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>webapps</directory>
    </fileSet>

    <fileSet>
      <directory>bin</directory>
    </fileSet>

    <fileSet>
      <directory>doc</directory>
      <excludes>
	<exclude>linkcheck</exclude>
	<exclude>template.html</exclude>
        <exclude>**/_*/**</exclude>
        <exclude>javadoc/**</exclude>
        <exclude>**/desktop.ini</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>Data</directory>
    </fileSet>

    <fileSet>
      <directory>etc</directory>
    </fileSet>

  </fileSets>

</assembly>

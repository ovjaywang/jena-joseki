joseki:BindingSPARQL
    a   joseki:QueryLanguageBinding ;
    rdfs:label "SPARQL processor" ;
    joseki:queryOperationName "SPARQL" ;
    joseki:queryOperationName "sparql" ;
    joseki:queryOperationName ql:SPARQL ;
    module:className "org.joseki.server.processors.sparql.SPARQL" ;
    .




<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <display-name>Jena RDF Server</display-name>

  <!-- SERVLETS -->

  <!-- A well-known servlet for testing -->

  <servlet>
    <servlet-name>Dumper</servlet-name>
    <servlet-class>
      org.joseki.server.webserver.servlets.DumpServlet
    </servlet-class>
  </servlet>

  <servlet>
    <!-- NOT rdfserver (the application name) -->
    <servlet-name>Jena RDF Server</servlet-name>
    <servlet-class>org.joseki.server.http.JosekiWebAPI</servlet-class>

    <!-- Configuration file -->
    <init-param>
      <param-name>jena.rdfserver.modelset</param-name>
      <param-value>etc/joseki.n3</param-value>
    </init-param>

  </servlet>


  <!-- MAPPINGS -->

  <servlet-mapping>
    <servlet-name>Dumper</servlet-name>
    <url-pattern>/dump</url-pattern>
  </servlet-mapping>


  <servlet-mapping>
    <servlet-name>Jena RDF Server</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- SECURIY -->

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Joseki</web-resource-name>
      <url-pattern>/rdfserver/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <http-method>OPTIONS</http-method>
    </web-resource-collection>
  </security-constraint>

</web-app>

